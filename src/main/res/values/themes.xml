        <item name="colorSecondary">@color/theme2ColorSecondary</item>
        <item name="rowBackground">@color/red</item>
        <item name="buttonColor">#F1F660</item>
        <item name="android:statusBarColor">#F1F660</item>
        <item name="android:navigationBarColor">@color/them2ColorPrimary</item>


    </style>

    <style name="DynamicTheme3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/them3ColorPrimary</item>
        <item name="colorPrimaryDark">@color/theme3ColorPrimaryDark</item>
