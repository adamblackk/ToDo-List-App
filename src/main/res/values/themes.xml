<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="backgroundColor">@color/white</item>
        <item name="cardBackgroundColor">@color/light_gray</item>
        <item name="textColor">@color/dark_gray</item>
        <item name="buttonColor">@color/green</item>
        <item name="tintColor">@color/white</item>
        <item name="rowBackground">#FFFCFC</item>
        <item name="saveItemColor">@color/white</item>
        <item name="updateItemColor">@color/red</item>
        <item name="floatBtnColor">@color/green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#02E391</item>
        <item name="android:navigationBarColor">#02E391</item>


    </style>

    <style name="DarkTheme.ToDoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@color/light_gray</item>
        <item name="colorSecondary">@color/light_gray</item>

        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/dark_gray</item>
        <item name="cardBackgroundColor">#BBBABA</item>
        <item name="textColor">@color/dark_gray</item>
        <item name="buttonColor">@color/light_gray</item>
        <item name="tintColor">@color/light_gray</item>
        <item name="rowBackground">@color/light_gray</item>
        <item name="saveItemColor">@color/white</item>
        <item name="updateItemColor">@color/light_gray</item>
        <item name="floatBtnColor">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#E6615F5F</item>
        <item name="android:navigationBarColor">#E6615F5F</item>
    </style>

    <style name="DynamicTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#DACAED</item>
        <item name="colorPrimaryDark">@color/theme1ColorPrimaryDark</item>
        <item name="colorSecondary">@color/theme1ColorSecondary</item>
        <item name="rowBackground">@color/green</item>
        <item name="buttonColor">#DACAED</item>
        <item name="android:statusBarColor">@color/theme1ColorPrimaryDark</item>
        <item name="android:navigationBarColor">#DACAED</item>

    </style>


